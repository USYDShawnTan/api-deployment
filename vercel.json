{
  "version": 2,
  "buildCommand": "cd api && npm install && npm run build",
  "outputDirectory": ".",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "env": {
    "MONGODB_URI": "from-workflow-secret",
    "MONGODB_DB_NAME": "from-workflow-secret",
    "API_ACCESS_PASSWORD": "from-workflow-secret",
    "NODE_ENV": "production",
    "REACT_APP_API_ACCESS_PASSWORD": "from-workflow-secret"
  }
} 