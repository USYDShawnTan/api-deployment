{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": [
          "backend/app/**",
          "backend/requirements.txt",
          "backend/.env"
        ],
        "excludeFiles": [
          "backend/**/__pycache__/**",
          "**/__pycache__/**",
          "**/*.pyc"
        ]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app/index.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "backend",
    "PYTHONDONTWRITEBYTECODE": "1"
  },
  "regions": ["hkg1"]
}
